<!-- Navigation -->
<nav
  id="navbar"
  class="fixed top-0 w-full z-50 transition-all duration-500 ease-out"
>
  <div class="w-full">
    <div
      id="nav-content"
      class="flex justify-between items-center transition-all duration-500 ease-out transform"
      style="padding-left: min(163px, 8.5vw); padding-top: min(56px, 2.9vw); padding-bottom: min(56px, 2.9vw); padding-right: min(163px, 8.5vw);"
    >
      <div
        class="flex items-center space-x-8 transition-transform duration-500 ease-out"
        id="nav-left"
      >
        <h1
          class="text-2xl font-bold text-purple-400 transition-transform duration-500 ease-out"
          id="logo"
        >
          PandoraHacks
        </h1>
        <div
          id="nav-links"
          class="hidden md:flex space-x-8 transition-all duration-500 ease-out"
        >
          <a
            href="#hero"
            class="text-gray-300 hover:text-purple-400 transition duration-300"
            >Home</a
          >
          <a
            href="#about"
            class="text-gray-300 hover:text-purple-400 transition duration-300"
            >About</a
          >
          <a
            href="#sponsors"
            class="text-gray-300 hover:text-purple-400 transition duration-300"
            >Sponsors</a
          >
          <a
            href="#faq"
            class="text-gray-300 hover:text-purple-400 transition duration-300"
            >FAQ</a
          >
          <a
            href="#team"
            class="text-gray-300 hover:text-purple-400 transition duration-300"
            >Team</a
          >
        </div>
      </div>
      <button
        id="register-btn"
        class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-2 rounded-lg transition-all duration-500 ease-out opacity-0 transform translate-x-8 scale-95 pointer-events-none"
      >
        Register Now
      </button>
    </div>
  </div>
</nav>

<script>
  window.addEventListener("scroll", () => {
    const navbar = document.getElementById("navbar");
    const navContent = document.getElementById("nav-content");
    const navLeft = document.getElementById("nav-left");
    const logo = document.getElementById("logo");
    const navLinks = document.getElementById("nav-links");
    const registerBtn = document.getElementById("register-btn");

    if (window.scrollY > 100) {
      // Scrolled state: reorganize layout with closer spacing
      navbar?.classList.add("bg-gray-900/90", "backdrop-blur-sm");

      // Adjust container padding smoothly
      if (navContent) {
        navContent.style.paddingLeft = "min(80px, 4.2vw)";
        navContent.style.paddingRight = "min(80px, 4.2vw)";
        navContent.style.paddingTop = "min(16px, 0.8vw)";
        navContent.style.paddingBottom = "min(16px, 0.8vw)";
      }

      // Slide logo slightly to the left (subtle movement)
      if (logo) {
        logo.style.transform = "translateX(-60px)";
      }

      // Keep navigation links centered with subtle shift
      if (navLinks) {
        navLinks.style.transform = "translateX(-20px)";
      }

      // Slide register button in from hidden state
      if (registerBtn) {
        registerBtn.style.transform = "translateX(-60px)";
        registerBtn.classList.remove(
          "opacity-0",
          "translate-x-8",
          "scale-95",
          "pointer-events-none"
        );
        registerBtn.classList.add(
          "opacity-100",
          "translate-x-0",
          "scale-100",
          "pointer-events-auto"
        );
      }

      // Remove spacing between logo and links
      if (navLeft) {
        navLeft.classList.remove("space-x-8");
        navLeft.classList.add("space-x-0");
      }
    } else {
      // Top state: back to original layout
      navbar?.classList.remove("bg-gray-900/90", "backdrop-blur-sm");

      // Reset container padding smoothly
      if (navContent) {
        navContent.style.paddingLeft = "min(163px, 8.5vw)";
        navContent.style.paddingRight = "min(163px, 8.5vw)";
        navContent.style.paddingTop = "min(56px, 2.9vw)";
        navContent.style.paddingBottom = "min(56px, 2.9vw)";
      }

      // Reset logo position smoothly
      if (logo) {
        logo.style.transform = "translateX(0)";
      }

      // Reset navigation links smoothly
      if (navLinks) {
        navLinks.style.transform = "translateX(0)";
      }

      // Slide register button back out
      if (registerBtn) {
        registerBtn.style.transform = "translateX(0)";
        registerBtn.classList.remove(
          "opacity-100",
          "translate-x-0",
          "scale-100",
          "pointer-events-auto"
        );
        registerBtn.classList.add(
          "opacity-0",
          "translate-x-8",
          "scale-95",
          "pointer-events-none"
        );
      }

      // Reset spacing between logo and links
      if (navLeft) {
        navLeft.classList.remove("space-x-0");
        navLeft.classList.add("space-x-8");
      }
    }
  });
</script>
